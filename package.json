{
  "name": "@thinkware/mcp-gateway",
  "version": "0.1.5",
  "author": "Thinkware",
  "license": "MIT",
  "description": "An MCP gateway that aggregates and serves multiple MCP resource servers through a single interface",
  "private": false,
  "keywords": [
    "mcp",
    "proxy",
    "gateway",
    "claude",
    "anthropic",
    "batch"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/minovap/mcp-gateway.git"
  },
  "type": "module",
  "bin": {
    "mcp-gateway": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "dev:react": "vite",
    "build:react": "vite build",
    "preview": "vite preview",
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --exec 'tsx src/index.ts'",
    "dev:sse": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --exec 'tsx src/sse.ts'",
    "build": "bash ./build.sh",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@types/cors": "^2.8.17",
    "@types/md5": "^2.3.5",
    "cors": "^2.8.5",
    "eventsource": "^3.0.2",
    "express": "^4.21.1",
    "md5": "^2.3.0",
    "single-instance": "^0.0.1",
    "tree-kill": "^1.2.2",
    "ws": "^8.18.1",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/ws": "^8.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.37",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.6"
  }
}
